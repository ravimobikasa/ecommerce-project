<%- include('partials/header.ejs') %><!DOCTYPE html>

    <div class="container-fluid px-5 pt-3">
      <div class="container p-5">
        <% if(typeof errorMessage != 'undefined' && errorMessage) { %>
        <p class="errorMessage"><%- errorMessage %></p>
        <% } %>
        <% const formData = locals.formData %>
        <form action="/product" method="post" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label">Product Title</label>
            <input type="text" class="form-control" placeholder="Enter the product title" name="title" value = "<%= formData?.title %>" required />
          </div>
          <div class="mb-3">
            <label for="" class="form-label">Upload Image</label>
            <input type="file" name="myImage" class="form-control" required />
          </div>
          <div class="mb-3">
            <label class="form-label">Price</label>
            <input type="number" class="form-control" placeholder="00" step=".01" min="1" name="price" value = "<%= formData?.price %>" required />
          </div>
          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" placeholder="product details" name="description" cols="60" rows="10" required ><%= formData?.description %>
            </textarea>
          </div>
          <button type="submit" class="btn btn-primary">Add Product</button>
        </form>
      </div>
    </div>

<%- include('partials/footer.ejs') %>