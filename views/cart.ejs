<%- include('partials/header.ejs') %>
    <section>
        <div class="container mt-5">
            <h3> Shopping Cart </h3>
            <div class="mt-5">
                <div class="row">

                    <div class=" col-md-8">

                        <div class="card  p-2">
                            <div class="row">

                                <% products?.forEach( item=> { %>

                                    <div class="col col-md-2">
                                        <img class="img-fluid" style="width: 150px;"
                                            src="/../images/products/<%=item.Product.imageUrl%>" />
                                    </div>

                                    <div class="col col-md-10">

                                        <h5 class="mb-3">
                                            <%= item.Product.title%>
                                                </h3>


                                                <div class="d-flex flex-row align-items-center">

                                                    <p class="align-self-center"> Quantity :
                                                    </p>

                                                    <div class="card ms-3">
                                                        <div
                                                            class="d-flex flex-row justify-content-around align-items-center py-1">
                                                            <div class="bd-highlight px-2">-</div>
                                                            <div class=" bd-highlight px-2">
                                                                <%= item.quantity %>
                                                            </div>
                                                            <div class=" bd-highlight px-2">+</div>
                                                        </div>

                                                    </div>

                                                </div>



                                                <div class="d-flex flex-row">
                                                    <p class="mb-0">Price:</p>
                                                    <p class="ms-2 mb-0">200</p>
                                                </div>

                                    </div>
                                    <% }) %>
                            </div>
                        </div>

                    </div>

                    <div class="col-md-4">

                        <div class="card p-3">
                            <h5 class="card-title">Price Details</h5>

                            <div class="row mt-2">
                                <h6 class="col">Total Items</h6>
                                <p class="col">20</p>
                            </div>

                            <div class="row ">
                                <h6 class="col">Total Amount</h6>
                                <p class="col">2000</p>
                            </div>


                            <button type="button" class="btn btn-primary  btn-block rounded mt-3">Place Order</button>

                        </div>

                    </div>
                </div>

            </div>
    </section>

    <%- include('partials/footer.ejs') %>