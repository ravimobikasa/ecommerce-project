<%- include('partials/header.ejs') %>
    <section>
        <div class="container mt-5">
            <h3> Order Detail </h3>
            <div class="mt-5">
                <div class="row">

                    <div class="col-md-8 ">

                        <% order.OrderItems.forEach( item=> { %>

                            <div class=" card mb-2 p-2">
                                <a href="/product/<%=item.productId%>" class="block text-reset text-decoration-none">

                                    <div class="row">

                                        <div class="cart col col-md-2 overflow-hidden">

                                            <img class="img-fluid  mx-2"
                                                src="/../images/products/<%=item?.productImage%>" />

                                        </div>

                                        <div class="col col-md-10">

                                            <h5 class="mb-1">
                                                <%= item.productTitle%>
                                            </h5>

                                            <div class="d-flex flex-row">

                                                <p class="mb-0 align-self-center">Quantity:</p>

                                                <p class="ms-3 mb-0 ">
                                                <div
                                                    class="d-flex flex-row justify-content-between  align-items-center ">
                                                    <p class="m-0 me-4">
                                                        <%= item.quantity %>
                                                    </p>

                                                </div>
                                                </p>
                                            </div>

                                            <div class="d-flex flex-row mt-1">
                                                <p class="mb-0">Price:</p>
                                                <p class="ms-2 mb-0">
                                                    ₹<%= item.productPrice%>
                                                </p>
                                            </div>

                                        </div>
                                    </div>

                            </div>
                            </a>

                            <% }) %>

                    </div>

                    <div class="col-md-4 ">

                        <div class="card p-3">
                            <h5 class="card-title">Order Details</h5>
                            <div class="row mt-2">
                                <div class="row mt-2">

                                    <h6 class="col">Shipping Address</h6>

                                </div>
                            </div>
                            <div class="row mt-2">
                                <h6 class="col">Total Items</h6>
                                <p class="col">
                                    <%= order.totalQuantity%>
                                </p>
                            </div>
                            <div class="row mt-2">
                                <h6 class="col">Order Status</h6>
                                <p class="col">
                                    <%= order.orderStatus%>
                                </p>
                            </div>

                            <div class="row">
                                <h6 class="col">Total Amount</h6>
                                <p class="col">
                                    ₹<%= order.totalPrice%>
                                </p>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
    </section>

    <%- include('partials/footer.ejs') %>