<%- include('partials/header.ejs') %>


    <section>
        <div class="container-fluid px-5 pt-3">
            <div class="heading ">
                <h2>Products</h2>
            </div>

            <div class="row mt-4">

                <% products?.forEach( item=> { %>
                   
                    <div class="col-lg-3 mt-3">
                        
                        <div class="product">
                            <div class="card r-5 shadow-sm">
                                <a href="/product/<%=item.id%>">
                                <img class=" card-img-top p-1 img-fluid img-thumbnail  "
                                    src=" /../images/products/<%=item.imageUrl%>" alt="Card image">
                                </a>
                                <div class="card-body">
                                    <h5 class="product-title ">
                                        <%= item.title %>
                                    </h5>

                                    <div class="row">

                                        <div class="col">
                                            <h5 class="price">
                                                â‚¹<%= item.price %>
                                            </h5>
                                    </div>
                                        <div class=" col d-flex justify-content-end">
                                            <form method="post" action="/cart">
                                                <input type="hidden" name="productId" value="<%=item.id%>" />
                                                <button type="submit" class="btn btn-primary btn-sm ">Add
                                                    to cart</a>
                                            </form>
                                        </div>
                                    </div>
                                  
                                </div>

                            </div>
                        </div>
                   
                    </div>
                

                    <% }) %>

                    <div class="d-flex justify-content-center mt-5">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <li class="page-item <%= pagination.page <= 1 ? 'disabled' : '' %>">
                                    <a class="page-link" href="/product?limit=<%=pagination.limit%>&page=<%=pagination.page-1%>">Previous</a>
                                </li>
                                <% for(let i =1 ; i<= Math.ceil(pagination.count/pagination.limit);i++){ %> 
                              
                              <li class="page-item  <%= pagination.page == i ? 'active' : '' %>"  >
                                <a class="page-link" href="/product?limit=<%=pagination.limit%>&page=<%=i%>"><%= i %></a></li>

                              <% } %>
                              <li class="page-item <%= pagination.page  >= Math.ceil(pagination.count/pagination.limit) ? 'disabled' : '' %>">
                                <a class="page-link" href="/product?limit=<%=pagination.limit%>&page=<%=pagination.page+1%>">Next</a></li>
                            </ul>
                          </nav>
                    </div>
            </div>
    </section>

    <%- include('partials/footer.ejs') %>
